
@using (Html.BeginForm("SwitchTheme", "Home", new{area=""} ,FormMethod.Post))
{
    @Html.DropDownList("themeName", new List<SelectListItem>()
    {
        new SelectListItem(){Text = "Default", Value = ""},
        new SelectListItem(){Text = "Sample", Value = "Sample"}
    })
    
    @Html.Hidden("redirectTo", System.Web.HttpContext.Current.Request.RawUrl)
    
    <button type="submit">Change</button>
}